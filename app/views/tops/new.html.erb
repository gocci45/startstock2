<section id="container">

  <%= render "header" %>

  <aside>
        <div id="sidebar" class="nav-collapse ">
          <!-- sidebar menu start-->
          <ul class="sidebar-menu" id="nav-accordion">
            <p class="centered"><a href="profile.html"></a></p>
            <h5 class="centered">
              <%= current_user.name %>
            </h5>
            <li class="mt">
              <%= link_to "トップページ" ,root_path ,class: 'active' %>
                <i class="fa fa-dashboard"></i>
            </li>
            <li class="sub-menu">
  
                  <i class="fa fa-desktop">
                    <span>
                      <%= link_to "入庫処理" ,new_top_path %>
                    </span>
                  </i>
            </li>
          </ul>
          <!-- sidebar menu end-->
        </div>
      </aside>
      <!--sidebar end-->

    <!--main content start-->
    
    <section id="main-content">
      <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> 入庫処理</h3>
        <!-- BASIC FORM ELELEMNTS -->
        <div class="row mt">
          <div class="col-lg-12">
            <div class="form-panel">
              <h4 class="mb"><i class="fa fa-angle-right"></i> 以下の項目を入力してください</h4>
              <%= form_with(model: @item, url: tops_path  ,class: 'form-horizontal style-form' , local: true) do |f| %>
                <div class="form-group">
                  <label class="col-sm-2 col-sm-2 control-label">商品名</label>
                  <div class="col-sm-10">
                    <%= f.collection_select(:itemname_id, Itemname.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 col-sm-2 control-label">対象メーカー</label>
                  <div class="col-sm-10">
                    <%= f.collection_select(:maker_id, Maker.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
                    <span class="help-block">A block of help text that breaks onto a new line and may extend beyond one line.</span>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 col-sm-2 control-label">単位</label>
                  <div class="col-sm-10">
                    <%= f.collection_select(:kt_gl_id, KtGl.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 col-sm-2 control-label">格納場所</label>
                  <div class="col-sm-10">
                    <%= f.collection_select(:souko_id, Souko.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 col-sm-2 control-label">石油類</label>
                  <div class="col-sm-10">
                    <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 col-sm-2 control-label">入庫日</label>
                  <div class="col-sm-10">
                    <%= f.text_area :expiration_date, class:"form-control", id:"item-name", placeholder:"", maxlength:"40" %>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 col-sm-2 control-label">個数</label>
                  <div class="col-sm-10">
                    <%= f.text_area :stock, class:"form-control", id:"item-name", placeholder:"", maxlength:"40" %>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-lg-2 col-sm-2 control-label">入庫処理でお困りはこちらまで</label>
                  <div class="col-lg-10">
                    <p class="form-control-static">sample_yamada_email@example.com</p>
                    <p class="form-control-static">  担当：山田</p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 col-sm-2 control-label">入庫</label>
                  <div class="col-sm-10">
                    <%= f.submit "入庫する" ,class: "btn btn-primary btn-block" %>
                    <span class="help-block">空欄箇所がありますとエラーになります。ご注意ください。</span>
                  </div>
                </div>
                </div>
              </form>

            </div>
          </div>
          <!-- col-lg-12-->
        </div>
        <!-- /row -->
      </section>
      <!-- /wrapper -->
    </section>
    <% end %>
    <!-- /MAIN CONTENT -->
    <!--main content end-->
  </section>
  <!-- js placed at the end of the document so the pages load faster -->
  <script src="lib/jquery/jquery.min.js"></script>
  <script src="lib/bootstrap/js/bootstrap.min.js"></script>
  <script class="include" type="text/javascript" src="lib/jquery.dcjqaccordion.2.7.js"></script>
  <script src="lib/jquery.scrollTo.min.js"></script>
  <script src="lib/jquery.nicescroll.js" type="text/javascript"></script>
  <!--common script for all pages-->
  <script src="lib/common-scripts.js"></script>
  <!--script for this page-->
  <script src="lib/jquery-ui-1.9.2.custom.min.js"></script>
  <!--custom switch-->
  <script src="lib/bootstrap-switch.js"></script>
  <!--custom tagsinput-->
  <script src="lib/jquery.tagsinput.js"></script>
  <!--custom checkbox & radio-->
  <script type="text/javascript" src="lib/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
  <script type="text/javascript" src="lib/bootstrap-daterangepicker/date.js"></script>
  <script type="text/javascript" src="lib/bootstrap-daterangepicker/daterangepicker.js"></script>
  <script type="text/javascript" src="lib/bootstrap-inputmask/bootstrap-inputmask.min.js"></script>
  <script src="lib/form-component.js"></script>


